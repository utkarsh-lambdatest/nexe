{
  "compilerOptions": {
    "target": "es2018",
    "strict": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "outDir": "lib/cjs",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
